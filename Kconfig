menuconfig RUMPRUN
    bool "rumprun"
    default y
    depends on ARCH_X86 && HAVE_LIB_SEL4 && HAVE_LIBC && HAVE_LIB_SEL4_VKA && HAVE_LIB_SEL4_UTILS && \
               HAVE_LIB_SEL4_VSPACE && HAVE_LIB_SEL4_SIMPLE && HAVE_LIB_UTILS && HAVE_LIB_CPIO && \
               HAVE_LIB_ELF && HAVE_LIB_SEL4_MUSLC_SYS && HAVE_LIB_SEL4_ALLOCMAN && HAVE_LIB_PLATSUPPORT && \
               HAVE_LIB_SEL4_PLAT_SUPPORT && HAVE_LIB_SEL4_SERIAL_SERVER
    select HAVE_RUMPRUN
    select LIB_SEL4_MUSLC_SYS_ARCH_PUTCHAR_WEAK
    help
        Rumprun unikernel

config USE_LARGE_PAGES
    bool "use large pages (disables mprotect)"
    default n
    depends on RUMPRUN
    help
        Use large pages for rumprun backing memory.  This reduces the amount of book keeping required
        to track the pages created and also reduces initialisation time.  However, mprotect depends on
        4k pages in order to remap the pages with new permissions.  Thus, enabling large pages results in
        disabling the stack guard page functionality.  Use at own risk.

config RUMPRUN_TMPFS_NUM_MiB
    int "Size of Rumprun tmpfs mount in MiB"
    default 1
    depends on RUMPRUN
    help
        Set this to the size of memory you want to back the tmpfs at /tmp

    menu "Set IOAPIC options"
        depends on RUMPRUN && IRQ_IOAPIC

        choice
            prompt "Select Ethernet IRQ handling"
            default USE_IOAPIC_ETH
            help
                Select IRQ handling for ethernet.

            config USE_IOAPIC_ETH
                bool "IOAPIC"
            config USE_MSI_ETH
                bool "MSI"
    endchoice
    endmenu

config HAVE_RUMPRUN
    bool
